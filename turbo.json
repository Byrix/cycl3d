{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check": { "dependsOn": ["^check"] },
    "lint": { "dependsOn": ["^lint"] },
    "lint:write": { "dependsOn": ["^lint:write"] },
    "format": { "dependsOn": ["^format"] },
    "format:write": { "dependsOn": ["^format:write"] },
    "build": { "dependsOn": ["^build"]}
  }
}
